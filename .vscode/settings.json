{
    "platformSettings.autoLoad": true,
    "platformSettings.condition": "os.release()",
    "platformSettings.platforms": {
        "default": {
            "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python3",
            "python.linting.pylintEnabled": false,
            "python.testing.pytestArgs": [
                "./tests"
            ],
            "python.analysis.extraPaths": [
                "./src"
            ],
            "python.testing.unittestEnabled": false,
            "python.testing.pytestEnabled": true,
            "python.languageServer": "Default",
        },
        "win32": {
            "inherits": "default",
            "java.home": "C:\\Program Files\\Microsoft\\jdk-11.0.12.7-hotspot"
        },
        "linux": {
            "inherits": "default"
        }
    },
    "editor.useTabStops": false,
    "editor.fontFamily": "Cascadia Code Light, Anonymous Pro, Vin Mono Pro Light, Fira Code, ScopeOne, Consolas, 'Courier New', monospace"
}
